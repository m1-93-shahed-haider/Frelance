<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backround"
            android:orientation="vertical">
            <!-- your rest xml code-->

            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway"
                android:text="edit Profile"
                android:textAlignment="center"
                android:textColor="#FD1600"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/ProfilePic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/profilepic"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/JobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway"
                android:text="Full Name Here"
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/FullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway"
                android:text="Job Title"
                android:textAlignment="center"
                android:textColor="#04BF9D"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/sBrief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/raleway"
                android:text="Brief:"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/smallBrief"
                android:layout_width="270dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Exp: Graphic Design"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/socialLinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/raleway"
                android:text="Social Media Links:"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"
                android:drawableStart="@drawable/at"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="E-mail Address"
                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/phone"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"
                android:drawableStart="@drawable/whatsapp"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Phone Number"
                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/insta"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"
                android:drawableStart="@drawable/insta"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Instagram"
                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/Behance"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"
                android:drawableStart="@drawable/behance"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Behance Account"
                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Website"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"
                android:drawableStart="@drawable/at"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Website.com"
                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />




            <TextView
                android:id="@+id/Skills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/raleway"
                android:text="SKills:"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Skill1"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"

                android:ems="10"
                android:fontFamily="@font/raleway"

                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/Skill2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"

                android:ems="10"
                android:fontFamily="@font/raleway"

                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/Skill3"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"

                android:ems="10"
                android:fontFamily="@font/raleway"

                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Skill4"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"

                android:ems="10"
                android:fontFamily="@font/raleway"

                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/Softwares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/raleway"
                android:text="Softwares:"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/software1"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"

                android:ems="10"
                android:fontFamily="@font/raleway"

                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/software2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"

                android:ems="10"
                android:fontFamily="@font/raleway"

                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/software3"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"

                android:ems="10"
                android:fontFamily="@font/raleway"

                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Software4"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"

                android:ems="10"
                android:fontFamily="@font/raleway"

                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp" />







            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/raleway"
                android:textColor="#031254"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:onClick="logout"
                android:text="Logout" />









        </LinearLayout>

    </ScrollView>
</LinearLayout>