<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- your rest xml code-->


            <ImageView
                android:id="@+id/ProfilePic"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/profileimg"
                android:layout_marginTop="50dp"/>


            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/FirstName"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:background="@drawable/custom"
                    android:ems="10"
                    android:fontFamily="@font/raleway"
                    android:hint="First Name"
                    android:padding="12dp"

                    android:textAlignment="center"
                    android:textColor="#031254"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/LastName"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"

                    android:background="@drawable/custom"
                    android:ems="10"
                    android:fontFamily="@font/raleway"
                    android:hint="Last Name"
                    android:padding="12dp"
                    android:paddingTop="8dp"
                    android:textAlignment="center"
                    android:textColor="#031254"
                    android:textSize="16sp" />


            </LinearLayout>



            <EditText
                android:id="@+id/email"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Enter your E-mail"
                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp"
                android:inputType="textEmailAddress"/>


            <EditText
                android:id="@+id/password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/custom"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Enter your Password"
                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/custom"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="your Phone Number"
                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp"
                android:inputType="number"/>


            <EditText
                android:id="@+id/skill1"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Skill 1"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/skill2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Skill 1"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/skill3"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Skill 1"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/skill4"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Skill 1"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />




            <EditText
                android:id="@+id/software1"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Software 1"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/software2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Software 2"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/software3"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Software 3"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/software4"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Software 4"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/insta"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="75dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Instagram Account"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/Behance"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Behance Account"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/Website"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Your website"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/Brief"
                android:layout_width="270dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Ex:My name is Biplab, a Graphic Designer with more than 6 years of experience. Meeting deadlines and ensuring client satisfaction are my top priorities"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />



            <EditText
                android:id="@+id/JobTiTleHint"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Exp: Graphic Design"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />



            <Button
                android:id="@+id/Confirm"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/custom_butun"
                app:backgroundTint="@null"
                android:fontFamily="@font/raleway"
                android:text="Confirm"
                android:textSize="16sp"
                />

        </LinearLayout>

    </ScrollView>


</LinearLayout>