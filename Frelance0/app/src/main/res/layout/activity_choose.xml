<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/freelancerBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Choose">


    <TextView
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/raleway"
        android:text="Select Your Account Type:"
        android:textAlignment="center"
        android:textColor="#031254"
        android:textSize="23sp" />

    <Button
        android:id="@+id/fBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_custom_img"
        android:fontFamily="@font/raleway"
        android:paddingBottom="86dp"
        android:text="I Am Freelancer"
        android:textAllCaps="false"
        android:textColor="#031254"
        android:textSize="17sp"
        app:backgroundTint="@null" />


    <Button
        android:id="@+id/cBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_image_custom"
        android:fontFamily="@font/raleway"
        android:paddingBottom="86dp"
        android:text="Need Freelancer"
        android:textAllCaps="false"
        android:textColor="#031254"
        android:textSize="17sp"
        app:backgroundTint="@null" />


</LinearLayout>
