<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBFBFB">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- your rest xml code-->


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                app:srcCompat="@drawable/logosmall" />



            <TextView
                android:id="@+id/Sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/raleway"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/line1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/linee" />



            <ImageView
                android:id="@+id/ProfilePic"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/profileimg"
                android:layout_marginTop="50dp"/>


            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/FirstName"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:background="@drawable/custom"
                    android:ems="10"
                    android:fontFamily="@font/raleway"
                    android:hint="First Name"
                    android:padding="12dp"

                    android:textAlignment="center"
                    android:textColor="#031254"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/LastName"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"

                    android:background="@drawable/custom"
                    android:ems="10"
                    android:fontFamily="@font/raleway"
                    android:hint="Last Name"
                    android:padding="12dp"
                    android:paddingTop="8dp"
                    android:textAlignment="center"
                    android:textColor="#031254"
                    android:textSize="16sp" />


            </LinearLayout>



            <EditText
                android:id="@+id/email"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Enter your E-mail"
                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp"
                android:inputType="textEmailAddress"/>


            <EditText
                android:id="@+id/password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/custom"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Enter your Password"
                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/custom"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="your Phone Number"
                android:padding="12dp"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="16sp"
                android:inputType="number"/>




            <TextView
                android:id="@+id/SetUoAcc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                android:fontFamily="@font/raleway"
                android:text="Set Up Your Profile"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/line2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/linee" />


            <TextView
                android:id="@+id/Skills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/raleway"
                android:text="Enter Your Skills:"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/skill1"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Skill 1"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/skill2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Skill 1"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/skill3"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Skill 1"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/skill4"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Skill 1"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Softwares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/raleway"
                android:text="Softwares"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/software1"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Software 1"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/software2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Software 2"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/software3"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Software 3"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/software4"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Software 4"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/SocialMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                android:fontFamily="@font/raleway"
                android:text="Social Media Links"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="23sp"
                />

            <ImageView
                android:id="@+id/line3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/linee" />


            <EditText
                android:id="@+id/insta"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="75dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Instagram Account"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/Behance"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Behance Account"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/Website"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Your website"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/oneLastStep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One Last Step"
                android:layout_marginTop="85dp"
                android:fontFamily="@font/raleway"
                android:textColor="#031254"
                android:textSize="23sp"
                android:textAlignment="center"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/linee" />


            <TextView
                android:id="@+id/SmallBrief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/raleway"
                android:text="Small Brief"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/Brief"
                android:layout_width="270dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Ex:My name is Biplab, a Graphic Designer with more than 6 years of experience. Meeting deadlines and ensuring client satisfaction are my top priorities"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/FullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/raleway"
                android:text="Job Title:"
                android:textAlignment="center"
                android:textColor="#031254"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/JobTiTleHint"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/textbtn"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="Exp: Graphic Design"
                android:padding="19dp"
                android:textAlignment="gravity"
                android:textColor="#031254"
                android:textSize="16sp" />



            <Button
                android:id="@+id/signUp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/custom_butun"
                app:backgroundTint="@null"
                android:fontFamily="@font/raleway"
                android:text="Sign up"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/logIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already Have an Account? Sign in"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/raleway"
                android:textColor="#031254"
                android:textSize="16sp"
                android:textAlignment="center"
                android:onClick="onClick"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:visibility="invisible" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>